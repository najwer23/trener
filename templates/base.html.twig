<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta content="Mariusz Najwer" name="Author"/>
        <meta content="width=device-width, initial-scale=1.0" name="viewport">
        <meta content="Mariusz Najwer" name="keywords"/>
        <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible"/>
        <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700&display=swap&subset=latin-ext" rel="stylesheet">
        <link rel="shortcut icon" href="{{ asset('IMG/fav.png')}}">
        <link href="{{ asset('CSS/main/main.css') }}" rel="stylesheet"/> {% block stylesheets %}{% endblock %}
        <link href="{{ asset('CSS/menu/menu.css') }}" rel="stylesheet"/>
        <title>
            {% block title %}
                {{page_name}}
            {% endblock %}
        </title>


        <script src="https://kit.fontawesome.com/084a192b8b.js"></script>
        <script src="{{ asset('JS/menu/menu.js') }}"></script>

        {% block javascripts %}{% endblock %}

    </head>
    <body>

        <header>
            <div class="headerRec">
                <h3>
                    <b>Virtual
                        <i class="fas fa-couch fa-lg"></i>
                    </b>
                </h3>
            </div>

            <div class="headerRec displayRec">
                <p>
                    <i class="fas fa-lg fa-globe-europe"></i>
                    najwer23.github.io</p>
            </div>
        </header>

        <nav class="menu" id="scrollMenu">
            <h2>MENU</h2>
            <p>
                <a href="/">
                    <i class="fas fa-umbrella-beach"></i>
                    Home</a>
            </p>
            <p>
                <a href="/about">
                    <i class="fas fa-project-diagram"></i>
                    About</a>
            </p>
            <p>
                <a href="/contact">
                    <i class="fas fa-at"></i>
                    Contact</a>
            </p>
            <p>
                <a href="/login">
                    <i class="fas fa-sign-in-alt"></i>
                    Log in</a>
            </p>

            {% if is_granted('ROLE_USER') %}
                <p>
                    <a href="/logout">
                        <br><i class="fas fa-door-open"></i>
                        Log Out</a>
                </p>
            {% endif %}

        </nav>

        <div class="menuToggler">
            <span></span>
        </div>


        {% block body %}{% endblock %}

    </body>
</html>
